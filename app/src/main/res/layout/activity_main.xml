<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="JobJson"
            type="com.example.findtodo.api.JobJson" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@color/white">

        <TextView
            android:id="@+id/supMessage"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Press on button"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="NotSibling" />


        <LinearLayout
            android:layout_below="@+id/supMessage"
            android:id="@id/text"
            android:layout_above="@+id/generateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/jobImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:minHeight="400dp" />

            <TextView
                android:id="@+id/textJob"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{JobJson.activity}"
                android:textSize="18dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/text"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/generateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get to Do" />


        </LinearLayout>


    </RelativeLayout>
</layout>